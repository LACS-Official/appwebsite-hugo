[
{{- $pages := where .Site.RegularPages "Type" "in" (slice "software" "post" "page") -}}
{{- range $i, $page := $pages -}}
  {{- if $i }},{{ end -}}
  {
    "title": {{ $page.Title | jsonify }},
    "description": {{ $page.Params.brief | default $page.Summary | jsonify }},
    "url": {{ $page.RelPermalink | jsonify }},
    "content": {{ $page.Plain | jsonify }}
  }
{{- end -}}
] 